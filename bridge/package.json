{
  "name": "pwd-bridge",
  "version": "0.0.1",
  "description": "A small REST server communicating with the Pinewood Derby racetrac",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "pretest": "standard",
    "test": "cross-env LOG_LEVEL=error mocha --recursive --reporter spec --exit ./test/specs/",
    "debug": "cross-env LOG_LEVEL=debug node index.js",
    "start": "node index.js",
    "dev": "pm2 start ecosystem.config.js",
    "update_env": "pm2 restart ecosystem.config.js --update-env"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelrommel/pwd-racetrack"
  },
  "keywords": [
    "node",
    "api",
    "restify",
    "jwt",
    "authentication"
  ],
  "author": "Michael Rommel <rommel@layer-7.net>",
  "license": "MIT",
  "dependencies": {
    "jsonwebtoken": "^8.3.0",
    "level": "^4.0.0",
    "random-number-csprng": "^1.0.2",
    "restify": "^7.2.1",
    "restify-errors": "^6.1.1",
    "restify-jwt-community": "^1.0.7",
    "serialport": "^6.2.1",
    "uuid": "^3.3.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "dirty-chai": "^2.0.1",
    "mocha": "^5.2.0",
    "standard": "^11.0.1",
    "supertest": "^3.1.0"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  }
}
